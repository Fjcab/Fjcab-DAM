<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:weightSum="1"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.40"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="14dp"
            android:gravity="end"
            android:textSize="50dp"
            android:text="0"
            android:id="@+id/txtOperacion"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:layout_margin="14dp"
            android:gravity="end"
            android:textSize="40dp"
            android:text="0"
            android:id="@+id/txtResultado"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.12"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/reinicio"
            android:textSize="15sp"
            android:id="@+id/btnReinicio"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/porcentaje"
            android:textSize="40sp"
            android:id="@+id/btnPorcentaje"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/borrar"
            android:textSize="15sp"
            android:id="@+id/btnBorrar"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/division"
            android:textSize="50sp"
            android:id="@+id/btnDividir"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.12"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/siete"
            android:textSize="40sp"
            android:id="@+id/btn7"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/ocho"
            android:textSize="40sp"
            android:id="@+id/btn8"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/nueve"
            android:textSize="40sp"
            android:id="@+id/btn9"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/multiplicacion"
            android:textSize="40sp"
            android:id="@+id/btnMultiplicar"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.12"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/cuatro"
            android:textSize="40sp"
            android:id="@+id/btn4"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/cinco"
            android:textSize="40sp"
            android:id="@+id/btn5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/seis"
            android:textSize="40sp"
            android:id="@+id/btn6"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/resta"
            android:textSize="50sp"
            android:id="@+id/btnResta"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.12"
        >

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="0.25"
            android:text="@string/uno"
            android:textSize="40sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/dos"
            android:textSize="40sp"
            android:id="@+id/btn2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/tres"
            android:textSize="40sp"
            android:id="@+id/btn3"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"

            android:text="@string/suma"
            android:textSize="50sp"
            android:id="@+id/btnSuma"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.12"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/cero"
            android:textSize="40sp"
            android:id="@+id/btn0" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginHorizontal="5dp"
            android:text="@string/dobleCero"
            android:textSize="20sp"
            android:id="@+id/btn00"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginHorizontal="5dp"

            android:text="@string/igual"
            android:textSize="50sp"
            android:id="@+id/btnIgual"/>
    </LinearLayout>

</LinearLayout>